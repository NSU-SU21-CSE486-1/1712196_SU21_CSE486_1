<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_redis">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="40dp">
        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".55"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/background"
                        android:elevation="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:paddingEnd="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/bloodgroup"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="text"
                            android:enabled="true"
                            android:clickable="true"
                            android:hint="Patient Blood Group"
                            android:paddingLeft="8dp"
                            android:textColor="@color/dark_blue"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".42"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/background"
                        android:elevation="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:paddingEnd="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/bag"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="text"
                            android:enabled="true"
                            android:clickable="true"
                            android:hint="Bags needed"
                            android:paddingLeft="8dp"
                            android:textColor="@color/dark_blue"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/hosname"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:clickable="true"
                        android:hint="Hospital Name"
                        android:paddingLeft="8dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/hosloc"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:clickable="true"
                        android:hint="Hospital Location"
                        android:textSelectHandleLeft="@color/pink"
                        android:paddingLeft="8dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColorHint="@color/grey"
                        android:hint="05 Aug 2021"
                        android:paddingStart="10dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/calendar"
                        android:paddingRight="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/timestore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Person"
                        android:textSize="16dp"
                        android:textColor="@color/dark"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:clickable="true"
                        android:textColorHint="@color/grey"
                        android:hint="Name"
                        android:paddingStart="10dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_profile"
                        android:paddingLeft="10dp"/>
<!--                    <view-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"/>-->
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="number"
                        android:enabled="true"
                        android:clickable="true"
                        android:textColorHint="@color/grey"
                        android:hint="Phone Number"
                        android:paddingStart="10dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_phone"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/white">
        <Button
            android:id="@+id/bloodreqbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Request"/>
    </RelativeLayout>
</FrameLayout>