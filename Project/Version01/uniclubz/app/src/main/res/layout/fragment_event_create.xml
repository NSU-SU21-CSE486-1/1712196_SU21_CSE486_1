<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_redis">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="40dp">
        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/eventname"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:clickable="true"
                        android:hint="Event Name"
                        android:paddingLeft="8dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/eventdescription"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:inputType="text"
                        android:maxLines="5"
                        android:enabled="true"
                        android:clickable="true"
                        android:hint="Description"
                        android:paddingLeft="8dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/eventplace"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:clickable="true"
                        android:hint="Location"
                        android:textSelectHandleLeft="@color/pink"
                        android:paddingLeft="8dp"
                        android:textColor="@color/dark_blue"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background"
                    android:elevation="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingEnd="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    android:hint="User Type"
                    app:endIconTint="@color/pink">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dropdown"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        android:textColorHint="@color/colorPrimary"
                        app:hintTextColor="@android:color/transparent"
                        app:endIconTint="@color/pink">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/privacyinput"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingStart="8dp"
                            android:background="@null"
                            android:hint="Privacy"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:paddingTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/background"
                        android:elevation="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="20dp"
                        android:paddingEnd="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/startdate"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColorHint="@color/grey"
                            android:hint="05 Aug 2021"
                            android:paddingStart="10dp"
                            android:textColor="@color/dark_blue"
                            android:background="@android:color/transparent"
                            android:drawableEnd="@drawable/calendar"
                            android:paddingRight="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/background"
                        android:elevation="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:paddingEnd="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/enddate"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColorHint="@color/grey"
                            android:hint="05 Aug 2021"
                            android:paddingStart="10dp"
                            android:textColor="@color/dark_blue"
                            android:background="@android:color/transparent"
                            android:drawableEnd="@drawable/calendar"
                            android:paddingRight="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/starttimestore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/poppins"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/endrecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/endtimestore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Add Food Image"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/rubik"
                        android:text="(optional)"
                        android:textColor="@color/dark_blue"
                        android:textSize="14dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/eventimage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:scaleType="center"
                    android:background="@color/white_redis"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/addimage"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/white">
        <Button
            android:id="@+id/eventcreatebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Event"/>
    </RelativeLayout>
</FrameLayout>