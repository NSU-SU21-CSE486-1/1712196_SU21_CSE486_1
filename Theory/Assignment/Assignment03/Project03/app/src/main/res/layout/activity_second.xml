                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins"
                            android:text="University Affiliation"
                            android:textColor="@color/dark_blue"
                            android:textSize="14dp"/>
                        <TextView
